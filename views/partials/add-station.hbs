<form class="section box" action="/dashboard/addstation" method="POST">
  <div class="columns">
    <div class="column">
      <div class="field">
        <label class="label">Station Name</label>
          <input class="input" type="text" placeholder="Enter station name" name="title">
      </div>
    </div>
    <div class="column">
      <div class="field">
        <label class="label">Latitude</label>
          <input class="input" type="text" placeholder="52.160858" name="lat">
      </div>
    </div>
    <div class="column">
      <div class="field">
        <label class="label">Longitude</label>
          <input class="input" type="text" placeholder="-7.152420" name="lng">
      </div>
    </div>
  </div>

  <div class="field is-grouped is-grouped-centered">
    <div class="control">
      <button class="button is-link">Add Station</button>
    </div>
  </div>
</form>